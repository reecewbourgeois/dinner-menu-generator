{
    "private": true,
    "scripts": {
        "build": "turbo run build --no-daemon",
        "clean": "turbo run clean --no-daemon",
        "dev": "turbo run dev --no-cache --continue --no-daemon",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "lint": "turbo run lint --no-daemon"
    },
    "devDependencies": {
        "prettier": "^2.8.8",
        "turbo": "^1.10.0"
    },
    "packageManager": "npm@9.5.1",
    "workspaces": [
        "apps/*",
        "packages/*"
    ]
}
